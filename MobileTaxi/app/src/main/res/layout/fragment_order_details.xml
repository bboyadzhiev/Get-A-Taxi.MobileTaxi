<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.getataxi.mobiletaxi.fragments.OrdersListFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/order_details_txt"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/person"
            android:contentDescription="@string/order_from_txt"
            android:layout_gravity="center"
            />
        <Space
            android:layout_width="15sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderAddressDetail"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="sdkjhkjhdsjkhfkjsdf sdkjfhsdkjfhkjsdf kjhsdfkjhsdkjhdf sdkfjhsdkjfh"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
    </LinearLayout>
    <Space
        android:layout_width="15sp"
        android:layout_height="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/destination"
            android:contentDescription="@string/order_to_txt"
            android:layout_gravity="center_horizontal"
            />
        <Space
            android:layout_width="15sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderDestinationDetail"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/order_to_not_specified"
            android:layout_gravity="center_vertical"
            android:textSize="15sp" />
    </LinearLayout>
    <Space
        android:layout_width="15sp"
        android:layout_height="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="@string/client_comment_txt"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="15sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/clientCommentDetail"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/no_comment"
            android:layout_gravity="center_vertical"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
